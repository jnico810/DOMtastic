{
  "manifest_version": 2,
  "author": "John Nico",
  "name": "CSS DOMtastic",
  "description": "Use this extension to edit CSS in real time!",
  "version": "0.21",
  "browser_action": {
    "default_icon": "/images/dT.png",
    "default_popup": "popup.html",
    "default_title": "Write some CSS!"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["/js/main.js"]
    }
  ],
  "permissions": [
    "http://*/*",
    "activeTab",
    "tabs"
  ]
}
